<Button>
    #minden gomb ugyanazt orokli
    font_size: 32
    background_normal: ''
    background_color: (0,1,1,1)

<MyBoxLayout>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        spacing: 20
        padding: 50

        Button:
            text: "Clear"
        RoundedButton:
            text: "Submit"
            pos_hint: {"x":0.7, "right":1}
            size_hint: (1,.3)


<RoundedButton@Button>
    background_color: (0,0,0,0)
    background_normal: ''
    canvas.before:
        Color:
            rgba: (93/255.0,75/255.0,123/255.0,1)
        RoundedRectangle:
            size: self.size
            pos: self.size
            radius: [5]